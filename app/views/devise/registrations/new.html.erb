<div class="container">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html =>  {:class => 'form-signin'}) do |f| %>
  <%= devise_error_messages! %>
  <h2 class="form-signin-heading"><%= t('devise.sessions.sign_up_please')%></h2>

  <%= f.email_field :email, :autofocus => true,:class =>'input-block-level', :placeholder=>t('common.email')  %>
  <%= f.password_field :password, :class =>'input-block-level', :placeholder=>t('common.password') %>
  <%= f.password_field :password_confirmation, :class =>'input-block-level', :placeholder=>t('common.password_confirm') %>


      <%= f.submit t('devise.sessions.sign_in'),:class=>"btn btn-large btn-primary" %>
                                         <br>
      <%= render "devise/shared/links" %>
  <% end %>
</div>
