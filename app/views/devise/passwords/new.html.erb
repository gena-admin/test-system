<div class="container">
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-signin' }) do |f| %>
  <%= devise_error_messages! %>
  <h2 class="form-signin-heading"><%=t('devise.sessions.f_password') %></h2>
  <%= f.email_field :email, :autofocus => true,:class =>'input-block-level', :placeholder=>t('common.email')  %>
  <%= f.submit t('devise.sessions.send_password'),:class=>"btn btn-large btn-primary" %>
  <br>
  <%= render "devise/shared/links" %>
  <% end %>
</div>
