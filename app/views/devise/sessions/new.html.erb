<div class="container">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html =>  {:class => 'form-signin'}) do |f| %>
    <h2 class="form-signin-heading"><%= t('devise.sessions.sign_in_please')  %> </h2>
    <%= f.email_field :email, :autofocus => true,:class =>'input-block-level', :placeholder=>t('common.email')  %>
    <%= f.password_field :password, :class =>'input-block-level', :placeholder=>t('common.password') %>

    <% if devise_mapping.rememberable? -%>
          <label class="checkbox">
                <%= f.check_box :remember_me %>  <%= f.label :remember_me, t('devise.sessions.rem')  %>
          </label>
    <% end -%>

    <%= f.submit t('devise.sessions.sign_in'),:class=>"btn btn-large btn-primary" %>
      <br>
      <%= render "devise/shared/links" %>
<% end %>
</div>
